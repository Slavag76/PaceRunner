<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editPaceMinute"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:hint="Min"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/editPaceSeconds"
        app:layout_constraintStart_toStartOf="@+id/editDistance"
        app:layout_constraintTop_toBottomOf="@+id/editDistance" />

    <EditText
        android:id="@+id/editDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Distance"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/button_calculate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="@+id/resultViewTime"
        app:layout_constraintStart_toStartOf="@+id/resultViewTime"
        app:layout_constraintTop_toBottomOf="@+id/resultViewTime" />

    <TextView
        android:id="@+id/resultViewTime"
        android:layout_width="164dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPaceMinute" />

    <EditText
        android:id="@+id/editPaceSeconds"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Sec"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editDistance"
        app:layout_constraintTop_toBottomOf="@+id/editDistance" />

</androidx.constraintlayout.widget.ConstraintLayout>